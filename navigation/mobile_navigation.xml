<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/navigation_home">

    <fragment
        android:id="@+id/navigation_home"
        android:name="com.example.wisebridge.ui.home.HomeFragment"
        android:label="Home"
        tools:layout="@layout/fragment_home" />

    <fragment
        android:id="@+id/navigation_home_expert"
        android:name="com.example.wisebridge.ui.home_expert.HomeExpertFragment"
        android:label="Home"
        tools:layout="@layout/fragment_home_expert" />

    <fragment
        android:id="@+id/navigation_content"
        android:name="com.example.wisebridge.ui.dashboard.ContentFragment"
        android:label="Your Content"
        tools:layout="@layout/fragment_content" />

    <fragment
        android:id="@+id/navigation_profile"
        android:name="com.example.wisebridge.ui.notifications.ProfileFragment"
        android:label="Profile"
        tools:layout="@layout/fragment_profile" />

